// prisma/schema.prisma
datasource db {
  provider = "postgresql" // or "sqlite" for local testing
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Bookmark {
  id         String   @id @default(uuid())
  userId     String
  resourceId String
  createdAt  DateTime @default(now())

  @@unique([userId, resourceId], name: "userId_resourceId")
}
